        {#</div>#}

        <div class="contactInfoBox">
            <strong>Bellon</strong>

            <p>{{ address.value | raw }}</p><br>

            {% if phone1.value is not empty %}
                <p>Телефон: {{ phone1.value | raw }}</p>
            {% endif %}

            {% if phone2.value is not empty %}
                <p>Телефон: {{ phone2.value | raw }}</p>
            {% endif %}
            <br>

            <p><a href="mailto:contact@invia.com">{{ email.value | raw }}</a></p>

        </div>

    </div>
    <!-- / contactMap -->


    <div class="container">

        <!-- ***************************** -->
        <!-- / googleMaps **************** -->


        <div class="row-fluid">
            <div class="span8">
                <div class="stylishForm">
                    <br><br>

                    <h3 class="big">Форма связи</h3>
                    <br><br>

                    <form action="{{ path('contacts') }}" method="POST" class="contactForm">
                        <fieldset>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="nameIcon">
                                        <input name="name" required type="text" class="span12" placeholder="Имя">
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="mailIcon">
                                        <input name="email" required type="text" class="span12" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="msgIcon">
                                        <textarea name="message" email required class="span12" placeholder="Ваше сообщение"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="sendIcon">
                                        <input type="submit" class="btn btn-primary" value="Отправить">
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </div>
                <!-- / stylishForm -->
            </div>
            <div class="span4">

            </div>
        </div>
        <!-- / row-fluid -->

    </div>
{% endblock content %}