{% extends 'BellonBundle::layout.html.twig' %}

{% block meta_tags %}
    <title>{{ meta_title | raw }}</title>
    <meta name="description" content="{{ meta_description | raw }}">
    <meta name="keywords" content="{{ meta_keywords | raw }}">
{%  endblock meta_tags %}

{% block javascript %}
    <!— Yandex.Metrika counter —>
    <script type="text/javascript">
        (function (d, w, c) {
            (w[c] = w[c] || []).push(function() {
                try {
                    w.yaCounter32238044 = new Ya.Metrika({
                        id:32238044,
                        clickmap:true,
                        trackLinks:true,
                        accurateTrackBounce:true,
                        webvisor:true
                    });
                } catch(e) { }
