{% extends 'BellonBundle::layout.html.twig' %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-buttons.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-thumbs.css') }}" type="text/css" media="screen" />
    {% endblock %}

    {% block javascript %}
        <script type="text/javascript" src="{{ asset('js/jquery-1.10.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.mousewheel-3.0.6.pack.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox.pack.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-buttons.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-media.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-thumbs.js') }}"></script>
    {% endblock %}

{% block content %}
<div class="container one-product">

        <div class="row-fluid">
            <div class="span4">
                <a class="fancybox-button" rel="fancybox-button" href="{{ product | itm_ipw_url('image') }}"><img src="{{ product | itm_ipw_path('image') | imagine_filter('product_one') }}" alt=" " class="easyFrame"></a>
            </div>
            <div class="span8">
                <div class="portfolioDetails">

                    <h3 class="light">{{ product.name }}</h3>
                    <p>
                        {{ product.shortDescription }}
                    </p>
                    <br>
                    <p><span class="entypo tools metaText"><i></i>Цена за мелкий опт(от 10): {{ product.minCost }}</span></p>
                    <p><span class="entypo tools metaText"><i></i>Цена за крупный опт(от 50):{{ product.maxCost }}</span></p>
                    <br>
                </div>
            </div>
        </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="blogContent" style="margin-top: 15px">
                    {{ product.description | raw }}
                <br>
            </div>

        </div>
    </div>
</div>
    <!-- /  container -->

    <script type="text/javascript">
        $(document).ready(function() {
            $(".fancybox-button").fancybox({
                prevEffect		: 'none',
                nextEffect		: 'none',
                closeBtn		: false,
                helpers		: {
                    title	: { type : 'inside' },
                    buttons	: {}
                }
            });
        });
    </script>
{% endblock content %}