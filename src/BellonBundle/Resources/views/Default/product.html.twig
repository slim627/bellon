{% extends 'BellonBundle::layout.html.twig' %}

    {% block meta_tags %}
        {% if product is not empty %}<title>{{ product.metaTitle }}</title>{% endif %}
        {% if product is not empty %}<meta name="description" content="{{ product.metaDescription }}">{% endif %}
        {% if product is not empty %}<meta name="keywords" content="{{ product.metaKeywords }}">{% endif %}
    {%  endblock meta_tags %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-buttons.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-thumbs.css') }}" type="text/css" media="screen" />
    {% endblock %}

    {% block javascript %}
        <script type="text/javascript" src="{{ asset('js/jquery-1.10.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.mousewheel-3.0.6.pack.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox.pack.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-buttons.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-media.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.fancybox-thumbs.js') }}"></script>

        <!— Yandex.Metrika counter —>
        <script type="text/javascript">
            (function (d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w.yaCounter32238044 = new Ya.Metrika({
                            id:32238044,
                            clickmap:true,
                            trackLinks:true,
                            accurateTrackBounce:true,
                            webvisor:true
                        });
                    } catch(e) { }
                });

                var n = d.getElementsByTagName("script")[0],
                        s = d.createElement("script"),
                        f = function () { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = "https://mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else { f(); }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/32238044" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!— /Yandex.Metrika counter —>
    {% endblock %}

{% block content %}
<div class="container one-product">

        <div class="row-fluid">
            <div class="span4">
                <a class="fancybox-button" rel="fancybox-button" href="{{ product | itm_ipw_url('image') }}"><img src="{% if product | itm_ipw_exists('image') %}{{ product | itm_ipw_path('image') | imagine_filter('product_main') }}"{% endif %} alt=" " class="easyFrame"></a>
            </div>
            <div class="span8">
                <div class="portfolioDetails">

                    <h3 class="light">{{ product.name }}</h3>
                        {{ product.shortDescription }}
                    <br>
                    <br>
                    <p><span class="entypo tools metaText"><i></i>Цена за мелкий опт(от 10): {{ product.minCost }} / {{ product.minCost / 10000}} руб</span></p>
                    <p><span class="entypo tools metaText"><i></i>Цена за крупный опт(от 50): {{ product.maxCost }} / {{ product.maxCost / 10000 }} руб</span></p>
                    <br>
                </div>
            </div>
        </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="blogContent" style="margin-top: 15px">
                    {{ product.description | raw }}
                <br>
            </div>
        </div>
    </div>
</div>
    <!-- /  container -->

    <script type="text/javascript">
        $(document).ready(function() {
            $(".fancybox-button").fancybox({
                prevEffect		: 'none',
                nextEffect		: 'none',
                closeBtn		: false,
                helpers		: {
                    title	: { type : 'inside' },
                    buttons	: {}
                }
            });
        });
    </script>
{% endblock content %}